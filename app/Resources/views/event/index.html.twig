                                    <input type="hidden" name="id" value="{{ event.id }}">
                                    <h3 class="event-title">{{ event.name }}</h3>
                                    <p class="event-description">{{ event.description }}</p>
                                    <p class="event-date">{% if event.date %}{{ event.date|date('Y-m-d H:i:s') }}{% endif %}</p>
                                </div>
                            {% endif %}
