    <div id="event">
        <table class="table">
            <tbody>
            {% for date in dates_array %}
                <tr>
                    <td>
                        {{ date }}
                    </td>
                    <td>
                        {% for event in events %}
                            {% if event.date|date("Y-m-d") == date %}
                                <div class="event col-md-2">
                                    <input type="hidden" name="id" value="{{ event.id }}">
                                    <h3 class="event-title">{{ event.name }}</h3>
                                    <p class="event-description">{{ event.description }}</p>
                                    <p class="event-date">{% if event.date %}{{ event.date|date('Y-m-d H:i:s') }}{% endif %}</p>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <ul>
        <li>
            <a href="{{ path('event_new') }}">Create a new event</a>
        </li>
    </ul>


{% endblock %}

