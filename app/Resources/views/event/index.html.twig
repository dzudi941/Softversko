        $(".event").draggable({
            helper: "clone",
            start: function(event, ui) {
                c.tr = this;
                c.helper = ui.helper;
            }
        });

        $("#event tr").droppable({
            drop: function(event, ui) {

                //var myRow = $(this).find('td');
